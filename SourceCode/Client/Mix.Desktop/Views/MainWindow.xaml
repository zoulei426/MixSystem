<Window x:Class="Mix.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mix.Desktop"
        xmlns:wpf="clr-namespace:Mix.Windows.WPF;assembly=Mix.Windows.WPF"
        xmlns:i18nResources="clr-namespace:Mix.Desktop.I18nResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="{wpf:I18n {x:Static i18nResources:Language.Login}}" />
        <ComboBox Grid.Column="2" Grid.Row="2" Margin="0 16"
                      ItemsSource="{Binding Path=AvailableCultureInfos, Source={x:Static wpf:I18nManager.Instance}}"
                      SelectedItem="{Binding Path=CurrentUICulture, Source={x:Static wpf:I18nManager.Instance}}"
                      DisplayMemberPath="NativeName" />
    </Grid>
</Window>